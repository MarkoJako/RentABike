@model IEnumerable<RentABike.Models.BicycleReservation>
@{
    ViewBag.Title = "IndexAdmin";
    Layout = "~/Views/Shared/_Layout.cshtml";

   <script src="~/Scripts/JS/reservationIndexAdmin.js"></script>

    <style>
        td:first-of-type {
            text-align: center;
        }
        h2 {
            font-style: normal;
            font-weight: 500;
        }
    </style>
}

    <div class="container" style="overflow-x: hidden; padding-top: 20px;">
        <div class="container-fluid" style="background-color: #f5f5f0;">
            <div style="float: left;">
                <h2 style="padding-bottom: 15px;">Customers Reservations</h2>
            </div>  
        </div>
        <br />
        @if (!Model.Any())
        {
            <p>There are no scheduled reservations.</p>
        }
        else
        {
            <div class="table-responsive">
                <table id="reservationsAdmin" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th id="fontSize" style="text-align: center;">Reservation Number</th>
                            <th id="fontSize">Customer Username</th>
                            <th id="fontSize">Selected Bicycle</th>
                            <th id="fontSize">Start Date</th>
                            <th id="fontSize">End Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var reservations in Model)
                        {
                            <tr>
                                <td id="fontSize">@reservations.Id</td>
                                <td id="fontSize">@reservations.CustomerEmail</td>
                                <td id="fontSize">@reservations.Bicycle.Name</td>
                                <td id="fontSize">@reservations.StartRide</td>
                                <td id="fontSize">@reservations.EndRide</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>

