@model IEnumerable<RentABike.Models.BicycleReservation>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <style>
        td:first-of-type {
            text-align: center;
        }
        h2 {
            font-style: normal;
            font-weight: 500;
        }
    </style>
}
<div class="container" style="overflow-x: hidden; padding-top: 20px;">
    
    <div class="container-fluid" style="background-color: #f5f5f0;">
        <div style="float: left;">
        <h2 style="padding-bottom: 15px;">My Reservations</h2>
        </div>
        <div style="float: right; padding-top: 20px;">
            @Html.ActionLink("New Reservation", "New", "BicycleReservations", null, new { @class = "btn btn-primary" })
        </div>
    </div>
    <br />
    @if (!Model.Any())
    {
        <p>You don't have any reservations yet.</p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th id="fontSize" style="text-align: center;">Reservation Number</th>
                        <th id="fontSize">Customer Username</th>
                        <th id="fontSize">Selected Bicycle</th>
                        <th id="fontSize">Start Date</th>
                        <th id="fontSize">End Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var currentUser in Model)
                    {
                        <tr>
                            <td id="fontSize">@currentUser.Id</td>
                            <td id="fontSize">@currentUser.CustomerEmail</td>
                            <td id="fontSize">@currentUser.Bicycle.Name</td>
                            <td id="fontSize">@currentUser.StartRide</td>
                            <td id="fontSize">@currentUser.EndRide</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

