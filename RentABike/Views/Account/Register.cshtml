@model RentABike.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    <style>
        #registerDiv {
            margin-top: 30px;
            background-color: lightgray;
            border-style: ridge;
        }
    </style>
}
    <div class="container">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
        {
            <div id="registerDiv" class="form-group-lg col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3">
                <h2 style="text-align: center;"><b>@ViewBag.Title</b></h2>
                <h4 style="text-align: center;">Create a new account.</h4>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "control-label", style = "font-size: 20px;" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "control-label", style = "font-size: 20px;" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label", style = "font-size: 20px;" })
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-default" value="Register" />
                </div>
                @Html.AntiForgeryToken()
            </div>
        }
    </div>
  
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
